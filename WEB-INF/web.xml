<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0"
    meta-complete="true">
    <display-name>jspTest</display-name>
    <description>test</description>

    <error-page>
        <error-code>404</error-code>
        <!--
            For deep-linking Angular apps, you *could* be
            sneaky and replace the error page for 404s with
            your app. However, a 404 response is still sent
            so applications like MSWord will say the page
            doesn't exist when opening links from a
            document. Instead, we use a custom JSP file
        -->
        <location>/404.jsp</location>
    </error-page>
</web-app>
